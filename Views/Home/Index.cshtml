@using aspnet_mvc_razor_app.Models.HomeViewModels

@model IndexViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>DocuVieware HTML5 Viewer & Document Management Kit - Online Demos.</title>
    <link rel="icon" href="~/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    @Html.Partial("_scripts")
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div id="header-title" class="py-4">
                    <a href="/"><img src="../../Images/docuvieware-cloud-logo.svg" width="358" class="logo img-fluid" alt="DocuVieware Cloud Logo" /></a>
                    <div id="header-desc">
                        <h1 class="mt-4 mb-3">Universal HTML5 Viewer and Document Management Kit</h1>
                        <p class="version">Online Demo • Version: @Model.Version</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="slider">
        <div class="container-fluid header-slider">
            <!-- slider -->
            <div class="row slider">
                <div class="col-12">
                    <div class="header-sep">
                        <img src="../../Images/header-sep.png" width="30" height="15" alt="View content demos">
                    </div>
                </div>
                <div class="col-12">
                    <!-- 1 - ANNOTATIONS -->
                    <div id="annotations" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-annotation.png" alt="Annotation" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Annotation Demo</h1>
                                    <p>
                                        Add, edit or remove rubber-stamps, sticky notes, freehand, text, redaction and more...
                                    </p>
                                    <a href="@Url.Action("Annotations")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /ANNOTATIONS -->
                    <!-- 2 - GALLERY -->
                    <div id="gallery" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-gallery.png" alt="Gallery Docuvieware" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Gallery Demo</h1>
                                    <p>
                                        A gallery of various sample documents that you can view on-the-fly.
                                    </p>
                                    <a href="@Url.Action("Gallery")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /GALLERY -->
                    <!-- 3 - IMAGE CLEANUP -->
                    <div id="image-cleanup" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-cleanup.png" alt="Filters" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Image Cleanup Demo</h1>
                                    <p>
                                        Clean your images, remove black borders, punch holes, despeckle, deskew and more.
                                    </p>
                                    <a href="@Url.Action("ImageCleanup")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /IMAGE CLEANUP -->
                    <!-- 4 - TWAIN -->
                    <div id="twain" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-twain.png" alt="TWAIN Acquisition Docuvieware" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>TWAIN Acquisition Demo</h1>
                                    <p>
                                        Acquire documents from a local TWAIN scanning device.
                                    </p>
                                    <a href="@Url.Action("Twain")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /TWAIN -->
                    <!-- 5 - BARCODES -->
                    <div id="barcodes" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-barcodes.png" alt="Online Barcode Recognition" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Online Barcode Recognition Demo</h1>
                                    <p>
                                        Recognize QrCode, Micro QrCode, Datamatrix, PDF417 and linear barcode symbols from PDF and images.
                                    </p>
                                    <a href="@Url.Action("BarcodeRecognition")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /BARCODES -->
                    <!-- 6 - FORM FIELDS -->
                    <div id="formfields" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-formfields.png" alt="PDF Form Fields Docuvieware" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>PDF Form Fields Demo</h1>
                                    <p>
                                        Interact with PDF forms to fill or change values to retrieve and process them server side.
                                    </p>
                                    <a href="@Url.Action("FormFields")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /FORM FIELDS -->
                    <!-- 7 - STANDALONE -->
                    <div id="standalone" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-standalone.png" alt="Standalone" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Standalone Viewer Demo</h1>
                                    <p>
                                        Plain and simple document and image viewer. Powerful yet easy to use.
                                    </p>
                                    <a href="@Url.Action("StandaloneViewer")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /STANDALONE -->
                    <!-- 9 - CUSTOM TOOLBAR-->
                    <div id="toolbar" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-toolbar.png" alt="Custom Toolbar" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Using Custom Toolbar Demo</h1>
                                    <p>
                                        Build and use your own toolbar to control the viewer.
                                    </p>
                                    <a href="@Url.Action("CustomToolbar")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /CUSTOM TOOLBAR -->
                    <!-- 10 - BLOG -->
                    <div id="blog" class="slider-panel">
                        <div class="row align-items-center py-4">
                            <div class="col-lg-6">
                                <div class="img-slider text-center">
                                    <img src="../../Images/slider-blog.png" alt="Integration blog Docuvieware" width="645" height="558" class="img-fluid img-align-slider">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="texte-desc-slider">
                                    <h1>Blog Integration Demo</h1>
                                    <p>
                                        See how it can be integrated in an existing content.
                                    </p>
                                    <a href="@Url.Action("BlogIntegration")" target="_blank" class="btn btn-lg btn-slider" title="Launch Docuvieware">&rarr; Launch</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /BLOG -->
                </div>
            </div>
        </div>
    </div>
    <!-- /slider -->
    <!-- thumbnails -->
    <div class="container mosaic">
        <div class="row tnbs">
            <div class="tnb tnb-active col-lg-4 col-sm-6">
                <a href="#" id="link-annotations" class="slider-button" data-slider="annotations">
                    <img src="../../Images/tnb-1-annotations.jpg" alt="Annotations" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Annotation Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-gallery" class="slider-button" data-slider="gallery">
                    <img src="../../Images/tnb-6-gallery.jpg" alt="Gallery Demo" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Gallery Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-imagecleanup" class="slider-button" data-slider="image-cleanup">
                    <img src="../../Images/tnb-7-cleanup.jpg" alt="Image Cleanup" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Image Cleanup Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-twain" class="slider-button" data-slider="twain">
                    <img src="../../Images/tnb-10-twain.png" alt="TWAIN Acquisition Demo" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">TWAIN Acquisition Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-barcodes" class="slider-button" data-slider="barcodes">
                    <img src="../../Images/tnb-8-barcodes.png" alt="Barcode Recognition Demo" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Barcode Recognition Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-formfields" class="slider-button" data-slider="formfields">
                    <img src="../../Images/tnb-9-formfields.png" alt="PDF Form Fields Demo" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">PDF Form Fields Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-standalone" class="slider-button" data-slider="standalone">
                    <img src="../../Images/tnb-2-standalone.jpg" alt="Standalone Viewer Demo" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Standalone Viewer Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-toolbar" class="slider-button" data-slider="toolbar">
                    <img src="../../Images/tnb-4-toolbar.jpg" alt="Using Custom Toolbar" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Using Custom Toolbar Demo</h2>
                </a>
            </div>
            <div class="tnb col-lg-4 col-sm-6">
                <a href="#" id="link-blog" class="slider-button" data-slider="blog">
                    <img src="../../Images/tnb-5-blog.jpg" alt="Blog Integration Demo" width="370" height="212" class="img-fluid">
                    <h2 class="mt-3">Blog Integration Demo</h2>
                </a>
            </div>
        </div>
        <!-- /row tnbs -->
    </div>
    <footer>
        <div class="footer footer-bg">
            <div class="container">
                <div class="row align-items-center">
                    <div class="all-browsers col-lg-8 text-center text-lg-left">
                        <ul class="browsers">
                            <li class="d-block mb-2 mb-lg-0 d-lg-inline">Works in all modern browsers and devices</li>
                            <li><img src="../../Images/safari.jpg" width="25" height="25" alt="Safari"></li>
                            <li><img src="../../Images/chrome.jpg" width="25" height="25" alt="Google Chrome"></li>
                            <li><img src="../../Images/explorer.jpg" width="25" height="25" alt="Microsoft Internet Explorer"></li>
                            <li><img src="../../Images/opera.jpg" width="25" height="25" alt="Opera"></li>
                            <li><img src="../../Images/mozilla-firefox.jpg" width="25" height="25" alt="Mozilla Firefox"></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 text-center text-lg-right">
                        <span class="powered-by-wrapper d-block mt-3 mt-lg-0">
                            <a href="https://passportpdf.com" target="_blank"><img alt="Powered by PassportPDF"  class="powered-by" src="../images/avepdf-powered-by-passportpdf.png"></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.5.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".slider-button").click(function () {
                setSliderPanel('#' + $(this).attr("data-slider"));
                $(".row").children(".tnb").removeClass("tnb-active");
                $(this).parent(".tnb").addClass("tnb-active");
            });
            setSliderPanel("#" + $("#link-annotations").attr("data-slider"));
        });
        function setSliderPanel(elem) {
            $(".slider-panel").hide();
            $(".img-slider").hide();
            $(".img-slider").removeAttr("style");
            $(elem).fadeIn("fast");
            $(".img-slider").fadeIn(600);
            $(".img-slider").animate({
                left: "+=50"
            }, 500);
        }
    </script>
</body>
</html>